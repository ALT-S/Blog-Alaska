    <p class="commentaire" style="text-align: right;">
        {% if niveau < 2 %}
        <a href="{{ path('alt_app_repondre_commentaire', {id: commentaire.id}) }}" class="btn btn-default comment">
            <i class="glyphicon glyphicon-comment ajout"></i>
            RÃ©pondre
        </a>
        {% endif %}
        <a href="{{ path('alt_app_signaler_commentaire', {'id': commentaire.id}) }}"
           class="btn btn-default warning">
            <i class="glyphicon glyphicon-warning-sign"></i>
            Signaler
        </a>
    </p>
</div>

