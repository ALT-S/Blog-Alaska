{% extends "ALTAppBundle::layout.html.twig" %}

{% block texte %}

{% endblock %}

{% block altfront_body %}
    <div class="col-sm-11">
        <h3>{{ billet.titre }}</h3>
        <i>Le {{ billet.date|date('d/m/Y') }}</i>

        <hr>

        <div class="lecture_contenu">
            {{ billet.contenu|raw }}
        </div>
        <p>
            {#<a href="{{ path('alt_app_ajouter_commentaire', {'id': billet.id}) }}" class=" row btn btn-default col-lg-offset-10 ">
                <i class="glyphicon glyphicon-edit"></i>
                Ajouter un commentaire
            </a>#}
        </p>

        <div class="com">
            <div class="Nbr_com row col-sm-offset-8 ">

                <p class="glyphicon glyphicon-comment">
                    <span>Nombre de commentaire(s):</span> {{ listeCommentaires | length }}
                </p>

            </div>
            <p>
                <a href="{{ path('alt_app_ajouter_commentaire', {id: billet.id}) }}" class="btn btn-default comment">
                    <i class="glyphicon glyphicon-comment ajout"></i>
                    Ajouter commentaire
                </a>
            </p>

            <h4>Commentaires :</h4>

            {% for commentaire in listeCommentaires %}
                <div class="billet-commentaire">

                    <h5>{{ commentaire.auteur }} <i>, Le {{ commentaire.date | date('d-m-Y H:i:s') }} </i></h5>

                    <div class="com_contenu">{{ commentaire.contenu|raw }}</div>
                </div>
                <p class="commentaire" style="text-align: right;">
                    <a href="{{ path('alt_app_signaler_commentaire', {'id': commentaire.id}) }}"
                       class="btn btn-default warning">
                        <i class="glyphicon glyphicon-warning-sign"></i>
                        Signaler
                    </a>
                </p>
                <hr>
            {% endfor %}
        </div>

        <p>
            <a href="{{ path('alt_app_homepage') }}" class="btn btn-default">
                <i class="glyphicon glyphicon-chevron-left"></i>
                Retour Ã  la page d'accueil
            </a>
        </p>
    </div>
{% endblock %}
