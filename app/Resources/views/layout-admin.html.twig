<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>Administration du blog</title>

        {% block stylesheets %}
            {# On charge le CSS de bootstrap depuis le site directement #}
            <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
            <link rel="stylesheet" href="{{ asset('bundles/altapp/css/admin.css') }}">

        {% endblock %}
        <script src="//cloud.tinymce.com/stable/tinymce.min.js"></script>
        <script>tinymce.init({ selector:'textarea',
                plugins: ["textcolor, advlist, lists "],
                toolbar1:
                "| bold italic underline strikethrough " +
                "| alignleft aligncenter alignright alignjustify " +
                "| formatselect fontselect fontsizeselect" +
                "| forecolor backcolor",
                toolbar2:
                "| bullist numlist outdent indent" +
                "| undo redo "
            });</script>
    </head>

    <body>
    <div class="container-fluid">
    {% block texte %}

        <h1>Admin</h1>
        <hr>
    {% endblock %}
            <div class="row">
                <nav class="col-sm-3 sidebar">
                    <div class="menu">
                    <ul class="nav nav-pills nav-stacked ">
                         <li><a style="text-align: center; text-decoration: underline; color: #18344c; font-size: 20px;" class="{% if app.request.attributes.get('_route') == 'alt_app_homepage' %}navbar-brand{% endif %}" href="{{ path('alt_app_homepage') }}">Voir le site</a></li>
                         <li><a class="{% if app.request.attributes.get('_route') == 'alt_app_admin_accueil' %}navbar-brand{% endif %}" href="{{ path('alt_app_admin_accueil') }}">Accueil<i class=" glyphicon glyphicon-home"></i></a></li>
                         <li><a class="{% if app.request.attributes.get('_route') == 'alt_app_admin_ajouter' %}navbar-brand{% endif %}" href="{{ path('alt_app_admin_ajouter') }}">Ajouter un billet</a></li>
                         <li><a class="{% if app.request.attributes.get('_route') == 'alt_app_admin_liste_billets' %}navbar-brand{% endif %}" href="{{ path('alt_app_admin_liste_billets') }}">Gestion des billets</a></li>
                         <li><a class="{% if app.request.attributes.get('_route') == 'alt_app_admin_liste_commentaires' %}navbar-brand{% endif %}" href="{{ path('alt_app_admin_liste_commentaires') }}">Gestion des commentaires</a></li>
                         <li><a class="{% if app.request.attributes.get('_route') == 'alt_app_admin_liste_contacts' %}navbar-brand{% endif %}" href="{{ path('alt_app_admin_liste_contacts') }}">Gestion des contacts</a></li>

                    </ul>
                    </div>

                    <div class="deconnexion">
                        <a href="{{ path('logout') }}">Se d√©connecter<i class="glyphicon glyphicon-off"></i></a>
                    </div>

                </nav>




                <div class=" bonjour col-sm-9">
                    <div class="tab">
                        {% if app.session.flashBag.has('notice') %}
                        <div class="alert alert-success">
                            {% for msg in app.session.flashBag.get('notice') %}
                                {{ msg }}
                            {% endfor %}
                        </div>
                        {% endif %}
                        {% block body %}
                        {% endblock %}
                    </div>
                </div>
            </div>



    </div>

    </body>


</html>