<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>Administration du blog</title>

        {% block stylesheets %}
            {# On charge le CSS de bootstrap depuis le site directement #}
            <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
            <link rel="stylesheet" href="{{ asset('bundles/altapp/css/admin.css') }}">

        {% endblock %}
    </head>

    <body>
    <div class="container col-lg-offset-1 col-lg-10 col-xs-offset-2 col-xs-10">
    {% block texte %}

        <h1>Admin</h1>
        <hr>
    {% endblock %}

        <div class="row">
            <div class="col-sm-3">
                <div class="menu_admin">
                    <ul class="nav nav-pills nav-stacked ">
                        <li><a href="{{ path('alt_app_admin_accueil') }}">Accueil</a></li></br>
                        <li><a href="{{ path('alt_app_admin_ajouter') }}">Ajouter un billet</a></li></br>
                        <li><a href="{{ path('alt_app_admin_liste_billets') }}">Gestion des billets</a></li></br>
                        <li><a href="{{ path('alt_app_admin_liste_commentaires') }}">Gestion des commentaires</a></li></br>
                        <li><a href="{{ path('alt_app_admin_liste_contacts') }}">Gestion des contacts</a></li>
                    </ul>
                </div>
            </div>
            <div class=" bonjour col-sm-9">

                {% if app.session.flashBag.has('notice') %}
                    <div class="alert alert-success">
                        {% for msg in app.session.flashBag.get('notice') %}
                            {{ msg }}
                        {% endfor %}
                    </div>
                {% endif %}

                {% block body %}
                {% endblock %}
            </div>

        </div>


    </div>
    </body>


</html>